<!DOCTYPE html>
<html>
<head>
  <title>Fakebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <nav class="navbar navbar-default navbar-fixed-top"><!--inverseで濃色-->
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
           <li><%= link_to image_tag('FB-f-Logo__white_29.png', {:height => '25px', :border => '0', :alt => 'トップページ'}), root_path %></li>
          </ul>
          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
            <input type="text" class="form-control" placeholder="友達を見つける">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
          <ul class="nav navbar-nav navbar-right"> <!--ヘッダ右側-->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">メニュー<span class="caret"></span></a>
              <ul class="dropdown-menu">
                  <li><%= link_to "トピック", topics_path %></li>
                  <li><%= link_to "新規投稿", new_topic_path %></li>
              </ul>
            </li>
            <% if user_signed_in? %>
             <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            <% else %>
             <li><%= link_to 'ログイン', new_user_session_path  %></li>
             <li><%= link_to 'サインアップ', new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

<%= yield %>

<footer>
    <p>© 2017 Akifumi OCHI</p>
</footer>


</body>
</html>
