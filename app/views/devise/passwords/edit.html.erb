<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

<h2>パスワードの変更</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <% if @minimum_password_length %>
      <em>(最低 <%= @minimum_password_length %> 文字)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "新しいパスワード", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "新しいパスワード（確認）", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更する", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
